<% if (comment_config && comment_config.appid){ %>
<div id="fb-root"></div>
<script>
  (function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=<%= comment_config.appid %>";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));
</script>

<div class="fb-comments" data-href="<%= url %>" data-num-posts="<%= comment_config.comment_count %>" data-width="<%= comment_config.comment_width %>" data-colorscheme="<%= comment_config.comment_colorscheme %>"></div>
<% } %>